## decreciente while
num=5
print("---")
while num>0:
	print (num)
	num = num-1

## creciente con while	
num=1
print("---")
while num<=5:
	print (num)
	num = num+1
	
##creciente con for

num=5
print("---")


for i in range (num):
	print (i+1)	

print("---")


num=6	
for i in range (1,num+1):
	print (i)
	
	
print("---")

# for con incremento
num=6	
for i in range (1,num+1,2):
	print (i)
print(i)
